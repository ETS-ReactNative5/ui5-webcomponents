<table border="0" cellspacing="0" cellpadding="0" @keydown="{{_onkeydown}}" role="table" aria-label="{{tableAriaLabelText}}">
    <thead>
        <tr>
            {{#each columns}}
                <th>
                    <slot name="{{this._individualSlot}}"></slot>
                </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each rows}}
        <tr role="row">
            {{#each this}}
                <td role="cell">
                    <slot name="{{this._individualSlot}}"></slot>
                </td>
            {{/each}}
        </tr>
        {{/each}}
    </tbody>
</table>